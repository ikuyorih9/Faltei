<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_configuracoes"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentConfiguracoes">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:background="@color/layoutBackground">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:layout_marginBottom="5dp"
                android:gravity="center|left"
                android:clickable="true"
                android:textSize="@dimen/tamanhoTitulo"
                android:text="Prioridade de cores."/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center|left"
                    android:clickable="true"
                    android:textSize="@dimen/tamanhoTitulo"
                    android:text="Limite de presença (%)"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:inputType="number"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:gravity="center|left"
                android:clickable="true"
                android:textSize="@dimen/tamanhoTitulo"
                android:text="Resetar dados do aplicativo"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:gravity="center|left"
                android:clickable="true"
                android:textSize="@dimen/tamanhoTitulo"
                android:text="Versão"/>

        </LinearLayout>
    </ScrollView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_gravity="center|bottom"
        android:gravity="center"
        android:textColor="@color/gray"
        android:textSize="@dimen/tamanhoTexto"
        android:text="@string/infoCriador"/>

</FrameLayout>